<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/margin_20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="highlight" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="normal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mild" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_mild_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="loginBackground" parent="FirebaseUI">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorControlNormal">@color/secondary_light</item>
        <item name="colorControlActivated">@color/secondary_light</item>
        <item name="colorControlHighlight">@color/secondary</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="colorButtonNormal">@color/disabled</item>
    </style>

    <style name="round_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>